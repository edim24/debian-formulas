# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start with defaults from defaults.yaml ##}
{% import_yaml 'php5x/defaults.yaml' as default_settings %}

{## Get environment from pillar ##}
{% set environment = salt['pillar.get'](
        'environment',
        default=default_settings.environment,
        merge=False
    )
%}

{## Merge in php5x pillar ##}
{% set php5x = salt['pillar.get'](
        'php5x',
        default=default_settings.php5x,
        merge=True
    )
%}
