# -*- coding: utf-8 -*-
# vim: ft=jinja

{## Start with defaults from defaults.yaml ##}
{% import_yaml 'php/defaults.yaml' as default_settings %}

{## Get environment from pillar ##}
{% set environment = salt['pillar.get'](
        'environment',
        default=default_settings.environment,
        merge=False
    )
%}

{## Merge in php pillar ##}
{% set php = salt['pillar.get'](
        'php',
        default=default_settings.php,
        merge=True
    )
%}
